<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:id="@+id/headerContainer"
        android:background="@color/toolbar_background_light">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/profile"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_take_avatar"
            android:background="@drawable/ic_photo_camera_white_24dp"
            android:layout_above="@+id/username"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_user_name"
            android:textSize="@dimen/text_size"
            android:textColor="@color/hivet_white"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:id="@+id/username"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/profile_image"
            android:layout_toLeftOf="@+id/btn_take_avatar"
            android:layout_alignLeft="@+id/profile_image"
            android:layout_alignStart="@+id/profile_image" />

    </RelativeLayout>
</RelativeLayout>